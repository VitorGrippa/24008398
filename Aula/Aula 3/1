#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main(){
 float num1, num2, soma, subtracao, multiplicacao, divisao;
 char opcao;
 refaz:
 printf("Digite o priemeiro numero: \n");
 scanf("%f", &num1);
 printf("Digite o segundo numero: \n");
 scanf("%f", &num2);
 soma=num1+num2;
 subtracao=num1-num2;
 multiplicacao=num1*num2;
 divisao=num1/num2;
 printf("A soma dos numeros eh: %f \n", soma);
 printf("A subtracao dos numeros eh: %f \n", subtracao);
 printf("A multiplicacao dos numeros eh: %f \n", multiplicacao);
 printf("A divisao dos numeros eh: %f \n", divisao);
 
 printf("Deseja realizar outro calculo?:(s/n) \n");
 scanf("%s", &opcao); 
 
 if (opcao=='s'){
    goto refaz;
 }
}
