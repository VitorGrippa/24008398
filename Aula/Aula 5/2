#include <stdio.h>

int main(){
    int opcoes, nota1, nota2, soma, subtracao, multiplicacao, divisao;
    printf("Digite a nota 1: \n");
    scanf("%i", &nota1);
    printf("Digite a nota 2: \n");
    scanf("%i", &nota2);
    printf("Opcoes: \n");
    printf("1. Soma \n");
    printf("2. Subtracao \n");
    printf("3. Multiplicacao \n");
    printf("4. Divisao \n");
    scanf("%i", &opcoes);

    switch (opcoes){
    case 1:
    soma=nota1+nota2;
    printf("A sua Soma eh: %i", soma);
    break;
    case 2:
    subtracao=nota1-nota2;
    printf("A sua Subtracao eh: %i", subtracao);
    break;
    case 3:
    multiplicacao=nota1*nota2;
    printf("A sua Multiplicacao eh: %i", multiplicacao);
    break;
    case 4:
    divisao=nota1/nota2;
    printf("A sua Divisao eh: %i", divisao);
    break;
    }
}
